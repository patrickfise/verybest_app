<form action="/create_favorite_from_user" method="post">

  <div class="form-group">
    <label for="dish_id">
      Dish
    </label>

    <%= select_tag(:dish_id, options_from_collection_for_select(Dish.all, :id, :cuisine_id, @favorite.dish_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="venue_id">
      Venue
    </label>

    <%= select_tag(:venue_id, options_from_collection_for_select(Venue.all, :id, :created_at, @favorite.venue_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="user_id" value="<%= @user.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create favorite
  </button>
</form>
